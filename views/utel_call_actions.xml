<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Show under the list view “Actions” menu for Utel calls -->
  <record id="action_delete_selected_calls" model="ir.actions.server">
    <field name="name">Delete selected calls</field>
    <field name="model_id" ref="model_utel_call"/>
    <field name="state">code</field>
    <field name="code">records.action_delete_selected()</field>

    <!-- Bind to the model so it appears in the list view menu -->
    <field name="binding_model_id" ref="model_utel_call"/>
    <field name="binding_view_types">list</field>
  </record>
</odoo>
